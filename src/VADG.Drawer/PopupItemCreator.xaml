<Window x:Class="VADG.Drawer.PopupItemCreator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="110" Width="200" Title="Create New Item" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical" >
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Name: " />
            <TextBox Text="&lt;Name>" Name="inputName" Width="100" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Button Name="terminalButton" Content="Terminal" Click="terminalButton_Click" Margin="3"/>
            <Button Name="nontButton" Content="Nonterminal" Click="nontButton_Click"  Margin="3"/>
        </StackPanel>
    </StackPanel>
</Window>
