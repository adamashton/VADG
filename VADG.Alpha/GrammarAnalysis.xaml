<Window x:Class="VADG.Alpha.GrammarAnalysis"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Grammar Analysis" Height="550" Width="505" HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
        <Label Margin="3">Current Grammar:</Label>
        <RichTextBox Width="Auto" Height="200" Name="currentGrammar" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
        <StackPanel Orientation="Horizontal">
            <Label Margin="3">Choose Analysis Option</Label>
            <ComboBox Name="analysisOptions" Width="100" Margin="3" />
            <Button Name="previewButton" Content="Preview Changes" Click="previewButton_Click" Margin="3" />
        </StackPanel>
        <RichTextBox Width="Auto" Height="200" Name="previewGrammar" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Apply Changes"  Name="apply" Click="apply_Click" Margin="3" />
            <Button Content="Cancel" Name="cancel" Click="cancel_Click" Margin="3" />
        </StackPanel>
    </StackPanel>
</Window>
